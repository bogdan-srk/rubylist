<html>
<head>
  <%= javascript_include_tag 'listings.js' %>
</head>
<body>
<%= form_for @listing do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.map { |c| [c.name, c.id]} %>
    </p>
    <p>
      <%= f.label :subcategory_id %>
      <%= f.select :subcategory_id, options_for_select([]) %>
    </p>
    <p>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </p>
    <p>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </p>
    <p>
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode, maxlength: 5 %>
    </p>
    <%= f.submit %>
<% end %>
</body>
</html>